<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_list_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp" >
    
   <ImageButton 
        	android:id="@+id/control_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
	        android:background="@drawable/control_play"
			android:layout_alignParentTop="true"
			android:layout_centerInParent="true" />
   
   <ImageButton 
        	android:id="@+id/control_rewind"
            android:layout_width="60dp"
            android:layout_height="60dp"
	        android:background="@drawable/control_rewind"
	        android:layout_toLeftOf="@id/control_play"
	        android:layout_marginRight="24dp"
			android:layout_alignParentTop="true" />
    
   <ImageButton 
        	android:id="@+id/control_forward"
            android:layout_width="60dp"
            android:layout_height="60dp"
	        android:background="@drawable/control_forward"
	        android:layout_toRightOf="@id/control_play"
	        android:layout_marginLeft="24dp"
			android:layout_alignParentTop="true" />
   
    <SeekBar 
	    android:id="@+id/control_seekbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_below="@id/control_play"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"/>
     
    <TextView 
         android:id="@+id/control_current"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentBottom="true"
         android:layout_margin="8dp"
         android:text="0:00" />"
   
   	<TextView 
         android:id="@+id/control_duration"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentBottom="true"
         android:layout_margin="8dp"
         android:text="5:00" />
   
   
</RelativeLayout>