<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="wrap_content" 
    android:paddingBottom="@dimen/listview_vertical_margin"
    android:paddingLeft="@dimen/listview_horizontal_margin"
    android:paddingRight="@dimen/listview_horizontal_margin"
    android:paddingTop="@dimen/listview_vertical_margin" >
	
        <TextView 
    		android:id="@+id/artist_list_artist"
    		android:layout_height="wrap_content" 
  		  	android:layout_width="match_parent" 
   		 	android:textSize="18sp" 
    		android:singleLine="true" />
        	
		<TextView 
			android:id="@+id/artist_list_content"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_below="@id/artist_list_artist"
    		android:singleLine="true" />

</RelativeLayout>
